@page
@model COVID.App.Frontend.Pages.EditarModel
@{
}
<h1>Editar Profesor</h1>
<form method="post">
    <input  type="hidden" asp-for="profesor.id">
       
    <div class="form-group">
        <label asp-for="profesor.nombre"></label>
        <input asp-for="profesor.nombre" class="form-control">
        <span class="text_danger" asp-validation.for="profesor.nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="profesor.apellido"></label>
        <input asp-for="profesor.apellido" class="form-control">
        <span class="text_danger" asp-validation.for="profesor.apellido"></span>
    </div>
    <div class="form-group">
        <label asp-for="profesor.edad"></label>
        <input asp-for="profesor.edad" class="form-control">
        <span class="text_danger" asp-validation.for="profesor.edad"></span>
    </div>
    <div class="form-group">
        <label asp-for="profesor.estado"></label>
        <input asp-for="profesor.estado" class="form-control">
        <span class="text_danger" asp-validation.for="profesor.estado"></span> 
    </div>
    <div class="form-group">
        <label asp-for="profesor.departamento"></label>
        <input asp-for="profesor.departamento" class="form-control">
        <span class="text_danger" asp-validation.for="profesor.departamento"></span> 
    </div>
    <div class="form-group">
        <label asp-for="profesor.asignatura"></label>
        <input asp-for="profesor.asignatura" class="form-control">
         <span class="text_danger" asp-validation.for="profesor.asignatura"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>